extends layout

block content
  h1 A random item
  
  - const image_names = ['airplane.jpg', 'camera.jpg', 'computer.jpg', 'lightbulb.jpg', 'telephone.jpg'];

  - for (let i = 0; i < 3; i++)
    - const randomIndex = Math.floor(Math.random() * 5);
    img(src=`/images/${image_names[randomIndex]}`, alt=`Random Image ${i+1}`, width="300", height="300")

